# General configuration
environment   = "dev"
system_name   = "data-pipeline"
aws_region    = "ap-northeast-1"

# Secrets Manager configuration
secret_name = "your-environment-system-secret-name"  # e.g., "dev-data-pipeline-secret"

# Lambda configuration
lambda_sources = [
  {
    path     = "../../../aws_lambda/src/aws_batch_launcher.py"
    filename = "aws_batch_launcher.py"
  },
  {
    path     = "../../../src/hsr_data_converter/utils/aws_helper.py"
    filename = "src/hsr_data_converter/utils/aws_helper.py"
  }
]
lambda_handler      = "aws_batch_launcher.lambda_handler"

# S3 bucket configuration
lerobot_bucket_name   = "your-lerobot-dataset-bucket"      # e.g., "your-company-lerobot-datasets"
ros_bags_bucket_name  = "your-rosbags-intermediate-bucket" # e.g., "your-company-rosbags-intermediate"

# AWS Batch configuration
max_vcpus = 80
job_vcpus = 4
job_memory = 24576
fps = 30
